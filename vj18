        h1 {
            text-transform: uppercase; /* Sva slova velika */
            text-align: center; /* Poravnanje naslova na sredinu */
            text-shadow: none; /* Početno bez sjene */
        }

        /* Efekt kada pređemo mišem preko naslova */
        h1:hover {
            text-shadow: 3px 2px 5px grey; /* Sjena na naslovu pri hoveru */
        }

        /* Stil za prvi odlomak */
        p.first {
            letter-spacing: 2px; /* Razmak između slova */
            word-spacing: 7px; /* Razmak između riječi */
            text-indent: 50px; /* Uvlaka od 50px */
        }

        /* Stil za drugi odlomak */
        p.second {
            line-height: 20px; /* Razmak između linija 20px */
            text-indent: 50px; /* Uvlaka od 50px */
        }

        /* Opći stil za odlomke */
        p {
            text-indent: 50px; /* Uvlaka od 50px za sve odlomke */
        }
